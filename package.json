{
  "name": "joe-design-system",
  "version": "0.1.0",
  "private": true,
  "description": "Joe Coffee's Design System - Token-driven React component library",
  "engines": {
    "node": ">=20.19.0"
  },
  "scripts": {
    "tokens:build": "node scripts/build-tokens.mjs && node scripts/export-legacy-tokens.mjs",
    "tokens:watch": "node scripts/build-tokens.mjs --watch",
    "tokens:legacy": "node scripts/export-legacy-tokens.mjs",
    "dev": "next dev",
    "build": "npm run tokens:build && next build",
    "start": "next start",
    "lint": "next lint",
    "storybook": "npx storybook dev -p 6006",
    "build-storybook": "npx storybook build"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-react": "^7.24.0",
    "@babel/preset-typescript": "^7.24.0",
    "@phosphor-icons/react": "^2.1.5",
    "@storybook/addon-a11y": "^10.2.3",
    "@storybook/react-webpack5": "^10.2.3",
    "@types/node": "25.1.0",
    "@types/react": "19.2.10",
    "babel-loader": "^9.1.3",
    "chromatic": "^11.0.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "next": "^14.2.0",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.2.0",
    "storybook": "^10.2.3",
    "storybook-design-token": "^5.0.0",
    "style-dictionary": "^4.0.0",
    "tailwind-merge": "^2.4.0",
    "tailwindcss": "^3.4.0",
    "token-transformer": "^0.0.27",
    "typescript": "^5.5.0"
  }
}